<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EgertonMarketplace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/red</item>
        <item name="android:windowBackground">@drawable/logo</item>
    </style>
    

    <style name="Theme.EgertonMarketplace.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EgertonMarketplace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EgertonMarketplace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>